<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<m:ResponsivePopover class="sapUiPopupWithPadding"
		placement="Top" title="Attachments" contentHeight="auto" contentWidth="auto"
		PlacementType="auto" verticalScrolling="true">
		<m:content>
			<layout:Grid defaultIndent="L0 M0 S0" defaultSpan="L2 M2 S3"
				hSpacing="0" width="auto" content="{/files}">
				<layout:content>
					<m:VBox>
						<m:items>
							<m:Image src="{src}" densityAware="true" class="imageTile"
								press="onPressImage" />
						</m:items>
					</m:VBox>
				</layout:content>
			</layout:Grid>
		</m:content>
	</m:ResponsivePopover>
</core:FragmentDefinition>