<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<ResponsivePopover class="sapUiPopupWithPadding"
		placement="Bottom" title="Select Audit Type">
		<content>
			<List headerText="" selectionChange="onSelAuditType"
				items="{ path:'auditTypeModel>/listitems' }" backgroundDesign="Transparent"
				growing="true" growingScrollToLoad="true" growingThreshold="10"
				includeItemInSelection="true" showSeparators="All" showUnread="true"
				width="auto" mode="SingleSelectMaster">
				<items>
					<StandardListItem title="{auditTypeModel>Zzdesc}"
						value="{auditTypeModel>ZzauditType}" adaptTitleSize="true"
						titleTextDirection="LTR" class="popList" />
				</items>
			</List>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>