<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<ResponsivePopover class="sapUiPopupWithPadding"
		placement="Bottom" title="Select Fault Source">
		<content>
			<List headerText="" selectionChange="onFltSrcChange"
				items="{ path:'fltSourceModel>/listitems' }" backgroundDesign="Transparent"
				growing="true" growingScrollToLoad="true" growingThreshold="10"
				includeItemInSelection="true" showSeparators="All" showUnread="true"
				width="auto" mode="SingleSelectMaster">
				<items>
					<StandardListItem title="{fltSourceModel>Zzdesc}"
						value="{priorityModel>Zzfaultsrc}" adaptTitleSize="true"
						titleTextDirection="LTR" class="popList" />
				</items>
			</List>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>